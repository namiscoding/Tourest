@* File: /Views/AdminCategories/Delete.cshtml *@
@model CategoryViewModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Xác nhận Xóa Danh mục";
}

<h1>@ViewData["Title"]</h1>

<h3 class="text-danger">Bạn có chắc chắn muốn xóa danh mục này không?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        @* Không cần hiển thị Description nếu ViewModel không có *@
        @*
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
         *@
    </dl>

    @* Form để gửi yêu cầu xóa (POST) *@
    <form asp-action="Delete" method="post">
        @* Input ẩn chứa ID cần xóa *@
        <input type="hidden" asp-for="CategoryId" />
        @Html.AntiForgeryToken() @* Chống CSRF *@
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>