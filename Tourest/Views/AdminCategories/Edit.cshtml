@* File: /Views/AdminCategories/Edit.cshtml *@
@model CategoryInputViewModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Chỉnh sửa Danh mục";
}

<div class="container-fluid px-4 py-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-info text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-edit me-2"></i>@ViewData["Title"]</h5>
                <a asp-action="Index" class="btn btn-outline-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i>Quay lại
                </a>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="alert alert-info mb-4">
                <i class="fas fa-info-circle me-2"></i>Bạn đang chỉnh sửa danh mục: <strong>@Model.Name</strong>
            </div>

            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4" role="alert"></div>

                @* Input ẩn để gửi CategoryID về Controller *@
                <input type="hidden" asp-for="CategoryID" />

                <div class="row">
                    <div class="col-md-8">
                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-bold">Tên danh mục</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-tag"></i></span>
                                <input asp-for="Name" class="form-control" placeholder="Nhập tên danh mục" />
                            </div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold">Mô tả</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-align-left"></i></span>
                                <textarea asp-for="Description" class="form-control" rows="5" placeholder="Nhập mô tả chi tiết về danh mục"></textarea>
                            </div>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <div class="form-text">Mô tả ngắn gọn giúp người dùng hiểu rõ hơn về danh mục này</div>
                        </div>

                        <div class="d-flex mt-4">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-save me-2"></i>Lưu thay đổi
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                                <i class="fas fa-times me-2"></i>Hủy
                            </a>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6 class="card-title"><i class="fas fa-info-circle me-2"></i>Thông tin</h6>
                                <hr>
                                <p class="small mb-2"><strong>ID:</strong> @Model.CategoryID</p>
                                <p class="small mb-0"><strong>Thời gian cập nhật:</strong> @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
                            </div>
                        </div>

                        <div class="card bg-light mt-3">
                            <div class="card-body">
                                <h6 class="card-title"><i class="fas fa-lightbulb me-2"></i>Lưu ý</h6>
                                <hr>
                                <ul class="mb-0 ps-3 small">
                                    <li class="mb-2">Việc thay đổi tên danh mục có thể ảnh hưởng đến SEO</li>
                                    <li>Các thay đổi sẽ được cập nhật ngay lập tức</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Hiệu ứng highlight cho trường đang chỉnh sửa
            $('input, textarea').focus(function() {
                $(this).parent('.input-group').addClass('border-primary');
            }).blur(function() {
                $(this).parent('.input-group').removeClass('border-primary');
            });
        });
    </script>
}