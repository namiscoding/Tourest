@* File: /Views/Shared/_AdminLayout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tourest Admin</title>

    @* Sử dụng các file CSS mặc định hoặc tạo file riêng cho Admin *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* Optional: Thêm link tới Font Awesome nếu muốn dùng icon *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />


    <style>
        /* CSS đơn giản cho sidebar */
        body {
            display: flex;
            min-height: 100vh;
            flex-direction: column;
        }

        .wrapper {
            display: flex;
            width: 100%;
            align-items: stretch;
            flex-grow: 1; /* Make wrapper grow to fill space */
        }

        #sidebar {
            min-width: 250px;
            max-width: 250px;
            background: #039e9d; /* Dark background */
            color: #fff;
            transition: all 0.3s;
            min-height: 100vh; /* Make sidebar full height */
        }

            /* Optional: Sidebar Toggle Styles */
            #sidebar.active {
                margin-left: -250px;
            }

            #sidebar .sidebar-header {
                padding: 20px;
                background: #039e9d;
            }

            #sidebar ul.components {
                padding: 20px 0;
                border-bottom: 1px solid #47748b;
            }

            #sidebar ul p {
                color: #fff;
                padding: 10px;
            }

            #sidebar ul li a {
                padding: 10px;
                font-size: 1.1em;
                display: block;
                color: rgba(255, 255, 255, 0.8); /* Lighter text */
                text-decoration: none;
                transition: all 0.3s;
            }

                #sidebar ul li a:hover {
                    color: #fff;
                    background: #F5EEDD; /* Slightly lighter dark on hover */
                }

            #sidebar ul li.active > a, a[aria-expanded="true"] {
                color: #fff;
                background: #077A7D; /* Bootstrap primary color for active */
            }

        #content {
            width: 100%;
            padding: 20px;
            min-height: 100vh;
            transition: all 0.3s;
            background-color: #f8f9fa; /* Light background for content */
        }

        /* Style for top navbar */
        .navbar {
            padding: 15px 10px;
            background: #fff;
            border: none;
            border-radius: 0;
            margin-bottom: 20px; /* Space below navbar */
            box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.1);
        }

        .navbar-btn {
            box-shadow: none;
            outline: none !important;
            border: none;
        }

        /* Footer basic style */
        .footer {
            background-color: #e9ecef; /* Light gray footer */
            padding: 1rem 0;
            margin-top: auto; /* Push footer down */
            font-size: 0.9em;
            text-align: center;
        }

    </style>
</head>
<body>
    <div class="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header">
                <div className="flex items-center gap-2 p-4 bg-white shadow">
                    <img src="/assets/images/logo-2.svg"
                         alt="Tourest Logo"
                         className="h-8 w-auto" />
                    <h3 className="text-lg font-semibold text-gray-800">Tourest Admin</h3>
                </div>
                <strong>TA</strong> @* Chữ viết tắt khi thu gọn (nếu có chức năng thu gọn) *@
            </div>

            <ul class="list-unstyled components">
                @* Lấy thông tin User đang đăng nhập (nếu cần) *@
                @*
                @if (User.Identity?.IsAuthenticated ?? false) {
                     <li class="p-3">
                         <small>Xin chào, @User.Identity.Name!</small>
                     </li>
                }
                *@
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")">
                    @* Link đến Dashboard Controller (cần tạo sau) *@
                    <a asp-controller="Dashboard" asp-action="Index">
                        <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminCustomers" ? "active" : "")">
                    @* Link đến Controller quản lý Khách hàng *@
                    <a asp-controller="AdminCustomers" asp-action="Index">
                        <i class="fas fa-users me-2"></i> Quản lý Khách hàng
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminTourGuides" ? "active" : "")">
                    @* Link đến Controller quản lý HDV (cần tạo sau) *@
                    <a asp-controller="AdminTourGuides" asp-action="Index">
                        <i class="fas fa-user-tie me-2"></i> Quản lý HDV
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminTourManagers" ? "active" : "")">
                    @* Link đến Controller quản lý Quản lý Tour (cần tạo sau) *@
                    <a asp-controller="AdminTourManagers" asp-action="Index">
                        <i class="fas fa-user-shield me-2"></i> Quản lý Quản lý Tour
                    </a>
                </li>
                <li class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminTours" ? "active" : "")">
                    @* Link đến Controller quản lý Tour (cần tạo sau) *@
                    <a asp-controller="AdminTours" asp-action="Index">
                        <i class="fas fa-map-signs me-2"></i> Quản lý Tour
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminCategories" ? "active" : "")">
                    <a asp-controller="AdminCategories" asp-action="Index">
                        <i class="fas fa-tags me-2"></i> Quản lý Danh mục
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminBookings" ? "active" : "")">
                    @* Link đến Controller quản lý Đặt Tour (cần tạo sau) *@
                    <a asp-controller="AdminBookings" asp-action="Index">
                        <i class="fas fa-calendar-check me-2"></i> Quản lý Đặt Tour
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminPayments" ? "active" : "")">
                    @* Link đến Controller quản lý Thanh toán (cần tạo sau) *@
                    <a asp-controller="AdminPayments" asp-action="Index">
                        <i class="fas fa-credit-card me-2"></i> Quản lý Thanh toán
                    </a>
                </li>
                @* Thêm các link quản lý khác: Notifications, SupportRequests, AuditLogs... *@
                <li>
                    <hr class="dropdown-divider" style="border-top: 1px solid rgba(255,255,255,.15);" />
                </li>
                <li>
                    @* Link Quay lại trang chủ (nếu cần) *@
                    <a asp-controller="Home" asp-action="Index" asp-area="">
                        <i class="fas fa-home me-2"></i> Về Trang Chủ
                    </a>
                </li>
                @* Form Đăng xuất 
                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <li>
                        <form class="d-inline p-2" asp-controller="Account" asp-action="Logout" method="post">
                            @* Đặt đúng Controller/Action Logout 
                            @Html.AntiForgeryToken()
                            <button type="submit" class="nav-link btn btn-link text-white-50" style="padding: 10px;"><i class="fas fa-sign-out-alt me-2"></i> Đăng xuất</button>
                        </form>
                    </li>
                }*@
            </ul>

        </nav>

        <div id="content">

            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">

                    @* Nút ẩn hiện sidebar (nếu muốn thêm JS để làm) *@
                    @* <button type="button" id="sidebarCollapse" class="btn btn-info">
                        <i class="fas fa-align-left"></i>
                        <span>Toggle Sidebar</span>
                    </button> *@
                    @*
                    <span class="navbar-text ms-auto">
                         Hiển thị thông tin người dùng đăng nhập 
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <text>Xin chào, @User.Identity.Name!</text>
                        }
                    </span>*@
                </div>
            </nav>

            @* Phần nội dung chính của từng View sẽ được render ở đây *@
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    @* Footer đơn giản *@
    <footer class="footer border-top text-muted">
        <div class="container-fluid text-center">
            &copy; @DateTime.Now.Year - Tourest Admin Panel
        </div>
    </footer>

    @* Script mặc định *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* Optional: JS cho sidebar toggle (nếu có nút) *@
    @*
    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });
    </script>
     *@

    @* Section để các View cụ thể có thể thêm script riêng *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>