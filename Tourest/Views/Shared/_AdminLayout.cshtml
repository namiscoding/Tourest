@* File: /Views/Shared/_AdminLayout.cshtml *@
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tourest Admin</title>

    <!-- CSS Libraries -->
    <link rel="stylesheet" href="~/css/admin_layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
   
</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <img src="/assets/images/logo-2.svg" alt="Tourest Logo" />
                <h3>Tourest Admin</h3>
                <strong>TA</strong> 
            </div>

            <ul class="list-unstyled components">
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")">
                    <a asp-controller="AdminDashboard" asp-action="Dashboard">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminCustomers" ? "active" : "")">
                    <a asp-controller="AdminCustomers" asp-action="Index">
                        <i class="fas fa-users"></i> Khách hàng
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminTourGuides" ? "active" : "")">
                    <a asp-controller="AdminTourGuides" asp-action="Index">
                        <i class="fas fa-user-tie"></i> Hướng dẫn viên
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminTourManagers" ? "active" : "")">
                    <a asp-controller="AdminTourManagers" asp-action="Index">
                        <i class="fas fa-user-shield"></i> Quản lý Tour
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminTours" ? "active" : "")">
                    <a asp-controller="AdminTours" asp-action="Index">
                        <i class="fas fa-map-signs"></i> Tours
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminCategories" ? "active" : "")">
                    <a asp-controller="AdminCategories" asp-action="Index">
                        <i class="fas fa-tags"></i> Danh mục
                    </a>
                </li>
                <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "AdminPayments" ? "active" : "")">
                    <a asp-controller="AdminPayments" asp-action="Index">
                        <i class="fas fa-credit-card"></i> Thanh toán
                    </a>
                </li>

                <hr />

                <li style="margin-top: auto">
                    <a asp-controller="Home" asp-action="Index" asp-area="">
                        <i class="fas fa-home"></i> Về Trang Chủ
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <!-- Top Navbar -->
            <nav class="admin-navbar">
                <div class="d-flex align-items-center">
                    <!-- Sidebar toggle button -->
                    <button type="button" id="sidebarCollapse" class="navbar-toggler me-3">
                        <i class="fas fa-bars"></i>
                    </button>

                    <h4 class="navbar-brand mb-0">
                        <i class="fas fa-chart-line"></i>
                        @ViewData["Title"]
                    </h4>
                </div>

                <div class="navbar-actions">
                    <!-- Notifications -->
                    <button class="navbar-action-btn">
                        <i class="fas fa-bell"></i>
                        <span class="notification-badge">3</span>
                    </button>

                    <!-- Messages -->
                    <button class="navbar-action-btn">
                        <i class="fas fa-envelope"></i>
                        <span class="notification-badge">5</span>
                    </button>

                    <!-- User dropdown -->
                    <div class="dropdown">
                        <div class="user-dropdown" data-bs-toggle="dropdown">
                            <img src="https://randomuser.me/api/portraits/men/85.jpg" alt="Admin User">
                            <div class="user-info d-none d-md-block">
                                <div class="user-name">Admin User</div>
                                <div class="user-role">Administrator</div>
                            </div>
                            <i class="fas fa-chevron-down ms-2"></i>
                        </div>
                        <ul class="dropdown-menu dropdown-menu-end shadow">
                            <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Hồ sơ</a></li>
                            <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Cài đặt</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item text-danger" href="#"><i class="fas fa-sign-out-alt me-2"></i>Đăng xuất</a></li>
                        </ul>
                    </div>
                </div>
            </nav>

            <!-- Main Content Area with subtle background -->
            <div class="content-wrapper">
                <!-- Optional Breadcrumb -->
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                    </ol>
                </nav>

                <!-- Main content render -->
                <main role="main">
                    @RenderBody()
                </main>
            </div>

            <!-- Footer -->
            <footer class="footer">
                <div class="container-fluid">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>&copy; @DateTime.Now.Year - Tourest Admin Panel</div>
                        <div>Phiên bản 1.0.0</div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Overlay for sidebar (mobile) -->
    <div class="overlay"></div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Sidebar Toggle Script -->
    <script type="text/javascript">
        $(document).ready(function () {
            // Sidebar toggle - mobile
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
                $('#content').toggleClass('active');
                $('.overlay').toggleClass('active');
            });

            // Close sidebar when clicking on overlay
            $('.overlay').on('click', function () {
                $('#sidebar').removeClass('active');
                $('#content').removeClass('active');
                $('.overlay').removeClass('active');
            });

            // Toggle compact sidebar (desktop)
            $('.compact-toggle').on('click', function() {
                $('#sidebar').toggleClass('compact');
                $('#content').toggleClass('compact-content');
            });

            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
              return new bootstrap.Tooltip(tooltipTriggerEl)
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>