@model IEnumerable<Tourest.ViewModels.RejectedAssignedTourViewModel>
@{
    ViewData["Title"] = "Rejected Assigned Tours";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tourest</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <style>
        :root {
            --primary-color: #28a745;
            --secondary-color: #6c757d;
            --danger-color: #dc3545;
            --warning-color: #ffc107;
        }

        body {
            background-color: #f4f6f9;
        }

        .tour-card {
            transition: all 0.3s ease;
            border-left: 4px solid var(--danger-color);
            margin-bottom: 1.5rem;
        }

            .tour-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            }

        .status-badge {
            font-size: 0.75rem;
            font-weight: 600;
            padding: 0.35rem 0.65rem;
        }

        .badge-rejected {
            background-color: #f8d7da;
            color: #721c24;
        }

        .reject-reason {
            color: #721c24;
            font-style: italic;
        }
    </style>
</head>
<body>
    <div class="container-fluid px-0">
        <!-- Header -->
        <header class="bg-white text-dark py-4 mb-4 shadow">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="h3 mb-0">
                            <img src="https://via.placeholder.com/30x30.png?text=T" alt="Tourest Logo" class="me-2" style="vertical-align: middle;" />
                            Rejected Assigned Tours
                        </h1>
                        <p class="mb-0">View tours that were assigned but rejected</p>
                    </div>
                    <div class="d-flex align-items-center">
                        <img src="https://via.placeholder.com/40" alt="Profile" class="rounded-circle me-2" width="40" height="40">
                        <span>Tour Manager</span>
                    </div>
                </div>
            </div>
        </header>

        <!-- Main Content -->
        <main class="container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h4 mb-0"><i class="fas fa-list me-2"></i> Rejected Assigned Tours List</h2>
                <button class="btn btn-primary" onclick="location.reload()">
                    <i class="fas fa-sync-alt me-1"></i> Refresh
                </button>
            </div>

            <!-- Tours List -->
            <div class="row">
                <div class="col-12">
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var tour in Model)
                        {
                            <div class="card tour-card mb-3" id="tour-@tour.TourGroupId">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h5 class="card-title mb-2">
                                                <span class="tour-name">
                                                    <i class="fas fa-map-marked-alt text-danger me-2"></i>
                                                    @tour.TourName
                                                </span>
                                                <span class="status-badge badge-rejected ms-2">
                                                    <i class="fas fa-times-circle me-1"></i>
                                                    @tour.Status
                                                </span>
                                            </h5>
                                            <div class="d-flex flex-wrap gap-3 mb-2">
                                                <div>
                                                    <i class="fas fa-calendar-day text-info me-1"></i>
                                                    <span>Departure: @tour.DepartureDate.ToString("MMM dd, yyyy")</span>
                                                </div>
                                                <div>
                                                    <i class="fas fa-user-tie text-primary me-1"></i>
                                                    <span>Assigned Guide: @tour.TourGuideName (ID: @tour.AssignedTourGuideId)</span>
                                                </div>
                                            </div>
                                            <div class="mt-2">
                                                <small class="reject-reason">
                                                    <i class="fas fa-exclamation-circle me-1"></i>
                                                    Rejection Reason: @tour.RejectionReason
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-5 bg-light rounded">
                            <i class="fas fa-calendar-times fa-3x text-muted mb-3"></i>
                            <h3 class="h4 text-muted">No Rejected Assigned Tours</h3>
                            <p class="text-muted">There are no tours that were assigned and rejected.</p>
                            <button class="btn btn-primary" onclick="location.reload()">
                                <i class="fas fa-sync-alt me-2"></i> Check for Updates
                            </button>
                        </div>
                    }
                </div>
            </div>
        </main>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>