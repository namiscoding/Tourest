@model Tourest.ViewModels.Tour.TourGuideDetailViewModel

@section Style {
    <style>
        .btn-custom {
            display: inline-block;
            padding: 0.75rem 1.5rem;
            background-color: #007bff;
            color: white;
            font-size: 1rem;
            font-weight: 500;
            border-radius: 8px;
            text-decoration: none;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            .btn-custom:hover {
                background-color: #0056b3;
                transform: translateY(-2px);
            }

        .btn-danger {
            background-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .container-centered {
            max-width: 800px;
            margin: 2rem auto;
            background-color: #fff;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0,0,0,0.05);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1rem;
            background-color: white;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
        }

        th, td {
            padding: 12px 15px;
            border: 1px solid #dee2e6;
            text-align: left;
        }

        th {
            background-color: #007bff;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        h2 {
            text-align: center;
            margin-bottom: 1.5rem;
            color: #343a40;
        }

        .actions {
            margin-top: 1.5rem;
            display: flex;
            justify-content: center;
        }
    </style>
}

<h2>Tour Guide Detail</h2>

<div class="container-centered">
    <table>
        <tr>
            <th>FullName</th>
            <td>@Model.FullName</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Phone Number</th>
            <td>@Model.PhoneNumber</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>@Model.Address</td>
        </tr>
        <tr>
            <th>Experience</th>
            <td>@Model.Experience</td>
        </tr>
        <tr>
            <th>Languages</th>
            <td>@Model.Languages</td>
        </tr>
        <tr>
            <th>Specializations</th>
            <td>@Model.Specializations</td>
        </tr>
        <tr>
            <th>Max Group Size</th>
            <td>@Model.MaxGroupSizeCapacity</td>
        </tr>
        <tr>
            <th>Rating</th>
            <td>@Model.Rating</td>
        </tr>
        <tr>
            <th>Profile Picture</th>
            <td>
                <img src="@Model.ProfilePictureUri" alt="Profile Picture" style="max-width: 150px; border-radius: 8px;" />
            </td>
        </tr>
    </table>
    <div class="actions">
        <a asp-controller="TourManager" asp-action="TourGuide" class="btn-custom">← View Tour Guides List</a>
    </div>
</div>