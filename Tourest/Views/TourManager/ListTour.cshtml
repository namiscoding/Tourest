@model IEnumerable<Tourest.ViewModels.Tour.TourListAllViewModel>

@{
	ViewData["Title"] = "Tour List";
}

<style>
	.container-centered {
		max-width: 800px;
		margin: 2rem auto;
		background-color: #fff;
		padding: 2rem;
		border-radius: 12px;
		box-shadow: 0 4px 10px rgba(0,0,0,0.05);
	}

	h2 {
		text-align: center;
		color: #333;
		margin-bottom: 1.5rem;
	}

	table {
		width: 100%;
		border-collapse: collapse;
		margin-top: 1rem;
		background-color: white;
		border-radius: 8px;
		overflow: hidden;
		box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
	}

	th, td {
		padding: 12px 15px;
		border: 1px solid #dee2e6;
		text-align: left;
	}

	th {
		background-color: #007bff;
		color: white;
	}

	tr:nth-child(even) {
		background-color: #f8f9fa;
	}

	.actions a {
		margin-right: 8px;
		text-decoration: none;
		color: #007bff;
	}

		.actions a:hover {
			text-decoration: underline;
		}

	.actions button {
		background-color: #dc3545;
		color: white;
		border: none;
		padding: 0.5rem 1rem;
		border-radius: 6px;
		cursor: pointer;
	}

		.actions button:hover {
			background-color: #c82333;
		}
</style>

<div class="container-centered">
	<h2>@ViewData["Title"]</h2>

	<table>
		<thead>
			<tr>
				<th>ID</th>
				<th>Tour</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var tour in Model)
			{
				<tr>
					<td>@tour.TourID</td>
					<td>@tour.Name</td>
					<td class="actions">
						<!-- View Customers -->
						<a asp-controller="TourManager" asp-action="ViewCustomers" asp-route-tourId="@tour.TourID">View Customers</a>

						<!-- Details -->
						<a asp-controller="TourManager" asp-action="GetTourDetails" asp-route-id="@tour.TourID">Details</a>

						<!-- Edit -->
						<a asp-controller="TourManager" asp-action="EditTour" asp-route-id="@tour.TourID">Edit</a>

						<!-- Delete -->
						<a asp-controller="TourManager"
						   asp-action="DeleteTour"
						   asp-route-tourId="@tour.TourID"
						   onclick="return confirm('Are you sure to delete tour with ID: @tour.TourID?')">
							Delete
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>

	<div style="margin-top: 1.5rem; text-align: center;">
		<!-- Create New Tour -->
		<a asp-controller="TourManager" asp-action="CreateTour" class="btn btn-primary">Create New Tour</a>
	</div>
</div>
 