@model Tourest.ViewModels.Tour.TourListViewModel

@{
    ViewData["Title"] = "Tour Details";
    Layout = "/Views/TourManager/_LayoutTourManager.cshtml";
}

<div class="container-fluid px-4">
    <div class="container-centered">
        <h2 class="text-primary">
            <i class="fas fa-info-circle me-2"></i>@ViewData["Title"]
        </h2>

        @* Hiển thị thông báo (nếu có) *@
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="card shadow-sm mb-4">
            <div class="card-body">
                @* Image (thay thế Thumbnail) *@
                @if (!string.IsNullOrEmpty(Model.ImageUrls))
                {
                    <div class="thumbnail">
                        <img src="@Model.ImageUrls" alt="@Model.Name" class="thumbnail-image" />
                    </div>
                }
                else
                {
                    <div class="thumbnail">
                        <div class="thumbnail-fallback">
                            No Image Available
                        </div>
                    </div>
                }

                @* Detail Fields *@
                <div class="row">
                    <div class="col-md-6">
                        <div class="detail-group">
                            <strong><i class="fas fa-id-badge me-1 text-primary"></i>ID:</strong> @Model.TourId
                        </div>
                        <div class="detail-group">
                            <strong><i class="fas fa-heading me-1 text-primary"></i>Name:</strong> @Model.Name
                        </div>
                        <div class="detail-group">
                            <strong><i class="fas fa-map-marker-alt me-1 text-danger"></i>Destination:</strong> @Model.Destination
                        </div>
                        <div class="detail-group">
                            <strong><i class="fas fa-clock me-1 text-primary"></i>Duration (Days):</strong> @Model.DurationDays
                        </div>
                        <div class="detail-group">
                            <strong><i class="fas fa-moon me-1 text-primary"></i>Duration (Nights):</strong> @Model.DurationNights
                        </div>
                        <div class="detail-group">
                            <strong><i class="fas fa-child me-1 text-primary"></i>Child Price:</strong> @Model.ChildPrice.ToString("N0") đ
                        </div>
                        <div class="detail-group">
                            <strong><i class="fas fa-user me-1 text-primary"></i>Adult Price:</strong> @Model.AdultPrice.ToString("N0") đ
                        </div>
                        <div class="detail-group">
                            <strong><i class="fas fa-star me-1 text-warning"></i>Average Rating:</strong> @(Model.AverageRating > 0 ? Model.AverageRating : "Not Rated")
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="detail-group">
                            <strong><i class="fas fa-tag me-1 text-primary"></i>Status:</strong>
                            @if (Model.Status == "Active")
                            {
                                <span class="badge bg-success shadow-sm">
                                    <i class="fas fa-check-circle me-1"></i>Active
                                </span>
                            }
                            else if (Model.Status == "Inactive")
                            {
                                <span class="badge bg-secondary shadow-sm">
                                    <i class="fas fa-pause-circle me-1"></i>Inactive
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark shadow-sm">
                                    <i class="fas fa-edit me-1"></i>Draft
                                </span>
                            }
                        </div>
                        <div class="detail-group">
                            <strong><i class="fas fa-users me-1 text-primary"></i>Min Group Size:</strong> @Model.MinGroupSize
                        </div>
                        <div class="detail-group">
                            <strong><i class="fas fa-users me-1 text-primary"></i>Max Group Size:</strong> @Model.MaxGroupSize
                        </div>
                        <div class="detail-group">
                            <strong><i class="fas fa-plane-departure me-1 text-primary"></i>Departure Points:</strong> @(string.IsNullOrEmpty(Model.DeparturePoints) ? "Not Specified" : Model.DeparturePoints)
                        </div>
                        <div class="detail-group">
                            <strong><i class="fas fa-check-circle me-1 text-success"></i>Included Services:</strong> @(string.IsNullOrEmpty(Model.IncludedServices) ? "Not Specified" : Model.IncludedServices)
                        </div>
                        <div class="detail-group">
                            <strong><i class="fas fa-times-circle me-1 text-danger"></i>Excluded Services:</strong> @(string.IsNullOrEmpty(Model.ExcludedServices) ? "Not Specified" : Model.ExcludedServices)
                        </div>
                        <div class="detail-group">
                            <strong><i class="fas fa-ban me-1 text-primary"></i>Is Cancellable:</strong> @(Model.IsCancellable ? "Yes" : "No")
                        </div>
                        <div class="detail-group">
                            <strong><i class="fas fa-file-alt me-1 text-primary"></i>Cancellation Policy:</strong> @(string.IsNullOrEmpty(Model.CancellationPolicyDescription) ? "Not Specified" : Model.CancellationPolicyDescription)
                        </div>
                    </div>
                </div>

                @* Description *@
                <div class="detail-group">
                    <strong><i class="fas fa-info-circle me-1 text-primary"></i>Description:</strong>
                    <p class="description-text">@(string.IsNullOrEmpty(Model.Description) ? "No Description Available" : Model.Description)</p>
                </div>

                @* Actions *@
                <div class="actions">
                    <a asp-controller="TourManager" asp-action="EditTour" asp-route-id="@Model.TourId" class="btn btn-primary btn-custom">
                        <i class="fas fa-edit me-1"></i>Edit Tour
                    </a>
                    <a asp-controller="TourManager" asp-action="ListTour" class="btn btn-outline-secondary btn-custom">
                        <i class="fas fa-arrow-left me-1"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Style {
    <style>
        .container-fluid {
            padding: 0 2rem;
        }

        .container-centered {
            max-width: 1000px; /* Tăng chiều rộng để chứa 2 cột */
            margin: 2rem auto;
        }

        .card {
            border-radius: 10px;
            border: none;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        }

        .card-body {
            padding: 2rem;
        }

        .thumbnail {
            text-align: center;
            margin-bottom: 2rem;
        }

        .thumbnail-image {
            max-width: 100%;
            height: 300px;
            object-fit: cover;
            border-radius: 10px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

            .thumbnail-image:hover {
                transform: scale(1.02);
            }

        .thumbnail-fallback {
            background-color: #e9ecef;
            height: 300px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #6c757d;
            font-size: 1.2rem;
            font-weight: 500;
            border-radius: 10px;
        }

        .detail-group {
            margin-bottom: 1.5rem;
            display: flex;
            align-items: flex-start;
        }

            .detail-group strong {
                min-width: 200px;
                color: #555;
                font-weight: 500;
                display: inline-flex;
                align-items: center;
            }

        .description-text {
            margin: 0;
            color: #333;
            line-height: 1.6;
        }

        .actions {
            margin-top: 2rem;
            display: flex;
            justify-content: center;
            gap: 1rem;
        }

        .btn-custom {
            padding: 0.5rem 1.5rem;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .btn-primary.btn-custom {
            background-color: #007bff;
            border: none;
            color: white;
        }

            .btn-primary.btn-custom:hover {
                background-color: #0056b3;
                transform: translateY(-2px);
            }

        .btn-outline-secondary.btn-custom {
            border-color: #6c757d;
            color: #6c757d;
        }

            .btn-outline-secondary.btn-custom:hover {
                background-color: #6c757d;
                color: white;
                transform: translateY(-2px);
            }

        .row {
            margin-left: -15px;
            margin-right: -15px;
        }

        .col-md-6 {
            padding-left: 15px;
            padding-right: 15px;
        }

        .text-muted {
            color: #6c757d;
        }
    </style>
}

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}