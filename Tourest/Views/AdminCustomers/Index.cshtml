@* File: /Views/AdminCustomers/Index.cshtml *@
@model PaginatedList<AdminCustomerViewModel>
@* Thêm các using và inject cần thiết *@
@using Tourest.Helpers 
@inject IConfiguration Configuration 

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Quản lý Khách hàng";
    string currentFilter = ViewData["CurrentFilter"] as string ?? "";
    var cloudName = Configuration["CloudinarySettings:CloudName"];
    var defaultAvatar = "assets/images/default-avatar.png";
}

<h1>@ViewData["Title"]</h1> 

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Tạo Khách hàng Mới</a>
</p>

@* Form tìm kiếm *@
<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchTerm" class="form-control" placeholder="Tìm theo tên, email, SĐT..." value="@currentFilter">
        <button class="btn btn-outline-secondary" type="submit">Tìm kiếm</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Reset</a> @* Nút để xóa bộ lọc *@
    </div>
</form>

@* Hiển thị thông báo thành công/lỗi (nếu có từ TempData) *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead>
            <tr>
                <th>Ảnh</th> 
                <th>ID</th>
                <th>Họ Tên</th>
                <th>Email</th>
                <th>Số Điện Thoại</th>
                <th>Trạng thái</th>
                <th>Ngày ĐK</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @* Gọi Helper để tạo URL thumbnail từ PublicId (lưu trong ProfilePictureUrl) *@
                        <img src="@CloudinaryHelper.GetThumbnailUrl(item.ProfilePictureUrl, 50, 50, cloudName, defaultAvatar)" 
                             alt="Avatar của @item.FullName" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;" />
                    </td>
                    <td>@item.UserId</td>
                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success">Hoạt động</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Vô hiệu hóa</span>
                        }
                    </td>
                    <td>@item.RegistrationDate.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-sm btn-outline-primary me-1" title="Sửa"><i class="fas fa-edit"></i></a>
                        <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-sm btn-outline-info me-1" title="Chi tiết"><i class="fas fa-info-circle"></i></a>
                        <form asp-action="ToggleActive" asp-route-id="@item.UserId" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            @if (item.IsActive)
                            {
                                <button type="submit" class="btn btn-sm btn-outline-warning" title="Vô hiệu hóa"><i class="fas fa-user-slash"></i></button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-sm btn-outline-success" title="Kích hoạt"><i class="fas fa-user-check"></i></button>
                            }
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@* Phân trang *@
@{
    // Tạo một partial view cho phân trang để tái sử dụng
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @prevDisabled">
            <a asp-action="Index"
               asp-route-pageIndex="@(Model.PageIndex - 1)"
               asp-route-searchTerm="@currentFilter"
               class="page-link">Trước</a>
        </li>
        @* Hiển thị một vài số trang xung quanh trang hiện tại *@
        @{
            int startPage = Math.Max(1, Model.PageIndex - 2);
            int endPage = Math.Min(Model.TotalPages, Model.PageIndex + 2);

            if (startPage > 1)
            {
                <li class="page-item"><a class="page-link" asp-action="Index" asp-route-pageIndex="1" asp-route-searchTerm="@currentFilter">1</a></li>
                if (startPage > 2)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
            }

            for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a asp-action="Index"
                       asp-route-pageIndex="@i"
                       asp-route-searchTerm="@currentFilter"
                       class="page-link">@i</a>
                </li>
            }

            if (endPage < Model.TotalPages)
            {
                if (endPage < Model.TotalPages - 1)
                {
                    <li class="page-item disabled"><span class="page-link">...</span></li>
                }
                <li class="page-item"><a class="page-link" asp-action="Index" asp-route-pageIndex="@Model.TotalPages" asp-route-searchTerm="@currentFilter">@Model.TotalPages</a></li>
            }
        }
        <li class="page-item @nextDisabled">
            <a asp-action="Index"
               asp-route-pageIndex="@(Model.PageIndex + 1)"
               asp-route-searchTerm="@currentFilter"
               class="page-link">Sau</a>
        </li>
    </ul>
</nav>