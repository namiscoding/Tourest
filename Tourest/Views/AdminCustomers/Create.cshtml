@* File: /Views/AdminCustomers/Create.cshtml *@
@model AdminCreateCustomerViewModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Tạo Khách hàng Mới";
    var defaultAvatar = "assets/images/default-avatar.png";
}

<!-- Modern Page Header -->
<div class="page-header mb-4 bg-white shadow-sm rounded-3 p-4">
    <div class="row align-items-center">
        <div class="col">
            <h1 class="page-title h3 fw-bold mb-1">
                <i class="fas fa-user-plus text-primary me-2"></i>@ViewData["Title"]
            </h1>
            <p class="text-muted mb-0">Tạo tài khoản khách hàng mới với đầy đủ thông tin cần thiết</p>
        </div>
        <div class="col-auto">
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
            </a>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Main Content Column -->
    <div class="col-xl-8 col-lg-7">
        <!-- Customer Information Card -->
        <div class="card border-0 shadow-sm rounded-3 overflow-hidden">
            <div class="card-header bg-white py-3 border-bottom">
                <h5 class="card-title mb-0 d-flex align-items-center">
                    <i class="fas fa-info-circle text-primary me-2"></i>Thông tin khách hàng
                </h5>
            </div>
            <div class="card-body p-4">
                @* QUAN TRỌNG: Thêm enctype cho form để upload file *@
                <form asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>
                    
                    <!-- Profile Picture Section -->
                    <div class="row mb-4 align-items-center">
                        <div class="col-lg-4 text-center mb-4 mb-lg-0">
                            <div class="position-relative d-inline-block">
                                <img src="@defaultAvatar" alt="Default Avatar" class="rounded-circle shadow img-thumbnail"
                                     style="width: 160px; height: 160px; object-fit: cover;" id="profilePreview" />
                                <div class="position-absolute bottom-0 end-0">
                                    <label for="ProfilePictureFile" class="btn btn-sm btn-primary rounded-circle" style="width: 36px; height: 36px;">
                                        <i class="fas fa-camera" style="line-height: 24px;"></i>
                                    </label>
                                    <input asp-for="ProfilePictureFile" type="file" accept="image/*" class="d-none" />
                                </div>
                            </div>
                            <p class="text-muted small mt-3">Nhấp vào biểu tượng camera để tải ảnh đại diện</p>
                            <span asp-validation-for="ProfilePictureFile" class="text-danger"></span>
                        </div>
                        <div class="col-lg-8">
                            <div class="card bg-light border-0 rounded-3">
                                <div class="card-body">
                                    <h6 class="fw-semibold mb-3"><i class="fas fa-image me-2 text-primary"></i>Hướng dẫn tải ảnh đại diện</h6>
                                    <ul class="list-unstyled small mb-0">
                                        <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i>Chấp nhận file .jpg, .jpeg, .png</li>
                                        <li class="mb-2"><i class="fas fa-check-circle text-success me-2"></i>Kích thước tối đa 5MB</li>
                                        <li><i class="fas fa-check-circle text-success me-2"></i>Hình ảnh vuông cho hiển thị tốt nhất</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="bg-light rounded-3 p-4 mb-4">
                        <h5 class="mb-3 text-primary"><i class="fas fa-user me-2"></i>Thông tin cá nhân</h5>
                        <div class="row g-4 mb-2">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="FullName" class="form-control rounded-3 border-0" placeholder="Nhập họ tên" />
                                    <label asp-for="FullName"><i class="fas fa-user me-2 text-muted"></i>Họ và tên</label>
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="PhoneNumber" class="form-control rounded-3 border-0" placeholder="Nhập số điện thoại" />
                                    <label asp-for="PhoneNumber"><i class="fas fa-phone me-2 text-muted"></i>Số điện thoại</label>
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea asp-for="Address" class="form-control rounded-3 border-0" placeholder="Nhập địa chỉ" style="height: 100px; resize: none;"></textarea>
                                    <label asp-for="Address"><i class="fas fa-map-marker-alt me-2 text-muted"></i>Địa chỉ</label>
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="bg-light rounded-3 p-4 mb-4">
                        <h5 class="mb-3 text-primary"><i class="fas fa-shield-alt me-2"></i>Thông tin tài khoản</h5>
                        <div class="row g-4 mb-2">
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input asp-for="Email" class="form-control rounded-3 border-0" type="email" placeholder="Nhập email" />
                                    <label asp-for="Email"><i class="fas fa-envelope me-2 text-muted"></i>Email</label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating password-container">
                                    <input asp-for="Password" class="form-control rounded-3 border-0" type="password" placeholder="Nhập mật khẩu" />
                                    <label asp-for="Password"><i class="fas fa-lock me-2 text-muted"></i>Mật khẩu</label>
                                    <button type="button" class="btn-toggle-password" data-target="Password">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating password-container">
                                    <input asp-for="ConfirmPassword" class="form-control rounded-3 border-0" type="password" placeholder="Xác nhận mật khẩu" />
                                    <label asp-for="ConfirmPassword"><i class="fas fa-lock me-2 text-muted"></i>Xác nhận mật khẩu</label>
                                    <button type="button" class="btn-toggle-password" data-target="ConfirmPassword">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <div class="form-control form-control-lg bg-white border-0 rounded-3 d-flex align-items-center p-3">
                                    <div class="form-check form-switch ps-0">
                                        <div class="d-flex align-items-center">
                                            <input asp-for="IsActive" class="form-check-input ms-0 me-3" type="checkbox" role="switch" style="transform: scale(1.5);" checked />
                                            <label asp-for="IsActive" class="form-check-label fw-medium">
                                                <i class="fas fa-toggle-on me-2 text-primary"></i>Trạng thái hoạt động
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="border-top pt-4 mt-3">
                        <div class="d-flex flex-wrap justify-content-between gap-2">
                            <button type="submit" class="btn btn-success rounded-pill px-4 py-2">
                                <i class="fas fa-save me-2"></i>Tạo khách hàng mới
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                                <i class="fas fa-times me-1"></i>Hủy
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Sidebar Column -->
    <div class="col-xl-4 col-lg-5">
        <!-- Password Guidelines Card -->
        <div class="card border-0 shadow-sm rounded-3 overflow-hidden mb-4">
            <div class="card-header bg-white py-3 border-bottom">
                <h5 class="card-title mb-0 d-flex align-items-center">
                    <i class="fas fa-key text-primary me-2"></i>Hướng dẫn mật khẩu
                </h5>
            </div>
            <div class="card-body p-4">
                <div class="alert alert-info rounded-3 border-0 shadow-sm mb-4">
                    <div class="d-flex">
                        <div class="flex-shrink-0 me-3">
                            <div class="bg-info bg-opacity-25 rounded-circle p-2 text-center" style="width: 48px; height: 48px;">
                                <i class="fas fa-shield-alt text-info" style="font-size: 24px;"></i>
                            </div>
                        </div>
                        <div>
                            <h5 class="alert-heading fs-6 fw-bold">Mật khẩu an toàn</h5>
                            <p class="mb-0 small">Để bảo vệ tài khoản khách hàng, vui lòng tạo mật khẩu mạnh theo hướng dẫn dưới đây.</p>
                        </div>
                    </div>
                </div>

                <div class="password-requirements">
                    <h6 class="mb-3">Yêu cầu mật khẩu:</h6>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item border-0 ps-0 d-flex align-items-center">
                            <div class="rounded-circle bg-light p-1 me-3" style="width: 30px; height: 30px; text-align: center;">
                                <i class="fas fa-check-circle text-success"></i>
                            </div>
                            <div>Ít nhất 6 ký tự</div>
                        </li>
                        <li class="list-group-item border-0 ps-0 d-flex align-items-center">
                            <div class="rounded-circle bg-light p-1 me-3" style="width: 30px; height: 30px; text-align: center;">
                                <i class="fas fa-check-circle text-success"></i>
                            </div>
                            <div>Ít nhất 1 chữ hoa (A-Z)</div>
                        </li>
                        <li class="list-group-item border-0 ps-0 d-flex align-items-center">
                            <div class="rounded-circle bg-light p-1 me-3" style="width: 30px; height: 30px; text-align: center;">
                                <i class="fas fa-check-circle text-success"></i>
                            </div>
                            <div>Ít nhất 1 chữ thường (a-z)</div>
                        </li>
                        <li class="list-group-item border-0 ps-0 d-flex align-items-center">
                            <div class="rounded-circle bg-light p-1 me-3" style="width: 30px; height: 30px; text-align: center;">
                                <i class="fas fa-check-circle text-success"></i>
                            </div>
                            <div>Ít nhất 1 số (0-9)</div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Help Information Card -->
        <div class="card border-0 shadow-sm rounded-3 overflow-hidden">
            <div class="card-header bg-white py-3 border-bottom">
                <h5 class="card-title mb-0 d-flex align-items-center">
                    <i class="fas fa-question-circle text-primary me-2"></i>Thông tin hỗ trợ
                </h5>
            </div>
            <div class="card-body p-4">
                <div class="mb-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-primary bg-opacity-10 p-2 me-3" style="width: 40px; height: 40px; text-align: center;">
                            <i class="fas fa-envelope text-primary"></i>
                        </div>
                        <h6 class="mb-0">Thông báo đăng ký</h6>
                    </div>
                    <p class="text-muted small mb-0">Khách hàng sẽ nhận được email thông báo sau khi tài khoản được tạo thành công.</p>
                </div>
                
                <div class="mb-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-success bg-opacity-10 p-2 me-3" style="width: 40px; height: 40px; text-align: center;">
                            <i class="fas fa-user-check text-success"></i>
                        </div>
                        <h6 class="mb-0">Xác thực tài khoản</h6>
                    </div>
                    <p class="text-muted small mb-0">Tài khoản sẽ được xác thực qua email trước khi có thể sử dụng đầy đủ chức năng.</p>
                </div>
                
                <div>
                    <div class="d-flex align-items-center mb-3">
                        <div class="rounded-circle bg-warning bg-opacity-10 p-2 me-3" style="width: 40px; height: 40px; text-align: center;">
                            <i class="fas fa-cog text-warning"></i>
                        </div>
                        <h6 class="mb-0">Thiết lập bổ sung</h6>
                    </div>
                    <p class="text-muted small mb-0">Cài đặt nâng cao có thể được thực hiện sau trong phần quản lý khách hàng.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Form Control Enhancements */
    .form-control:focus {
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.15);
    }
    
    .form-control, .form-select {
        padding: 0.6rem 1rem;
    }
    
    .form-floating label {
        padding-left: 1rem;
    }
    
    .form-floating>.form-control:focus~label,
    .form-floating>.form-control:not(:placeholder-shown)~label {
        transform: scale(0.85) translateY(-0.75rem) translateX(0.15rem);
    }
    
    /* Password visibility toggle */
    .password-container {
        position: relative;
    }
    
    .btn-toggle-password {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        border: none;
        background: transparent;
        color: #6c757d;
        cursor: pointer;
        z-index: 10;
    }
    
    /* Card Enhancements */
    .card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }
    
    /* Button Enhancements */
    .btn {
        padding: 0.5rem 1.5rem;
        font-weight: 500;
        transition: all 0.2s ease-in-out;
    }
    
    .btn:hover {
        transform: translateY(-1px);
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Preview ảnh trước khi upload
        $(document).ready(function () {
            $('#ProfilePictureFile').change(function () {
                if (this.files && this.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                        $('#profilePreview').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(this.files[0]);
                }
            });
            
            // Toggle hiển thị mật khẩu
            $('.btn-toggle-password').click(function() {
                const targetId = $(this).data('target');
                const passwordInput = $('#' + targetId);
                const toggleIcon = $(this).find('i');
                
                if (passwordInput.attr('type') === 'password') {
                    passwordInput.attr('type', 'text');
                    toggleIcon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    passwordInput.attr('type', 'password');
                    toggleIcon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });
            
            // Kiểm tra mật khẩu
            $('#Password').on('input', function() {
                const password = $(this).val();
                const requirements = [
                    { regex: /.{6,}/, element: $('.password-requirements li:nth-child(1) i') },
                    { regex: /[A-Z]/, element: $('.password-requirements li:nth-child(2) i') },
                    { regex: /[a-z]/, element: $('.password-requirements li:nth-child(3) i') },
                    { regex: /[0-9]/, element: $('.password-requirements li:nth-child(4) i') }
                ];
                
                requirements.forEach(item => {
                    if (item.regex.test(password)) {
                        item.element.removeClass('text-muted').addClass('text-success');
                    } else {
                        item.element.removeClass('text-success').addClass('text-muted');
                    }
                });
            });
        });
    </script>
}