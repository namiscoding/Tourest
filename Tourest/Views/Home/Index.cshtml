@{
    ViewData["Title"] = "Home Page";
}
@using System.Globalization
@model Tourest.ViewModels.Home.HomeViewModel

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Collapsible Chat</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.3.2/mdb.min.css"
          rel="stylesheet" />
    </head>
<body>
<main>
    <!-- hero__section start  -->
    <section class="hero__section section-padding-top overflow-hidden">
        <figure class="hero__vactor">
            <img src="~/assets/images/hero-section/hero-vector.png"
                 alt="vactor" />
        </figure>
        <div class="container">
            <div class="row g-4">
                <div class="col-md-5">
                    <div class="hero__content">
                        <h3 class="hero-sub-title d-inline-block">Explore The</h3>
                        <h1 class="hero-title char-animation">Travel & Adventures</h1>
                        <p class="mt-2">Find awesome tour and activities in Vietnam</p>
                    </div>
                </div>
                <div class="col-md-7">
                    <div class="hero__thumb">
                        <figure>
                            <img src="~/assets/images/hero-section/2.png"
                                 alt="hero-thgumb" />
                        </figure>
                        <figure>
                            <img src="~/assets/images/hero-section/1.png"
                                 alt="hero-thgumb" />
                        </figure>
                    </div>
                </div>


            </div>
        </div>
    </section>
    <!-- hero__section end  -->
    <!-- featured-tours__section start  -->
    <section class="featured-tours__section position-relative bg-white section-padding-top section-mini-padding-bottom">
        <figure class="featured-tours__shap-icon-1">
            <img src="~/assets/images/featured-tours-section/icon-wave-1.png"
                 alt="icon" />
        </figure>
        <figure class="featured-tours__shap-icon-2">
            <img src="~/assets/images/featured-tours-section/icon-wave-2.png"
                 alt="icon" />
        </figure>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section__header">
                        <h4 class="section__sub-title before-after-style-1 text-orange-red">
                            Tours
                        </h4>
                        <h2 class="section__title title-anim">
                            Most Popular Tours
                        </h2>
                    </div>
                </div>
            </div>
            <div class="row section-mini-padding-top fade_bottom">
                <div class="col-12">
                    <div class="row g-4 align-items-end">
                        <div class="col-md-6">
                            <div class="sestination__header section__header text-md-start">
                                
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="destination__header d-flex justify-content-center justify-content-md-end btn-trigger btn-bounce">
                                <a asp-controller="Tours" asp-action="Index" class="see-all">
                                    See All
                                    <i class="fa-solid fa-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="swiper featured-tours__slider">
                        <div class="swiper-wrapper">
                            @if (Model.FeaturedTours != null && Model.FeaturedTours.Any())
                            {
                                @foreach (var tour in Model.FeaturedTours)
                                {
                                    <div class="swiper-slide">
                                        <div class="featured-tours__slide">
                                            <figure class="slide-thumb">
                                                <a href="#0" class="favorite">
                                                    <i class="fa-regular fa-heart"></i>
                                                </a>
                                                <img src="~/assets/images/featured-tours-section/tour.png"
                                                     alt="tour" />
                                            </figure>
                                            <div class="slide-content">
                                                <p class="tour-location">@tour.Destination</p>
                                                <h4 class="tour-title">
                                                        <a asp-controller="Tours" asp-action="Details" asp-route-id="@tour.TourId" class="line-clamp-2">@tour.Name</a>
                                                    
                                                </h4>
                                                <div class="featured-tours__meta">
                                                    <div class="revew">
                                                        @if (tour.AverageRating.HasValue && tour.AverageRating > 0)
                                                        {
                                                            <span class="total-ratings bg-warning text-dark px-2 py-1 rounded-pill small" title="@tour.AverageRating.Value.ToString("0.0") out of 5 stars">
                                                                <i class="fa-solid fa-star"></i> @tour.AverageRating.Value.ToString("0.0")
                                                            </span>
                                                            @if (tour.SumRating.HasValue && tour.SumRating > 0)
                                                            {
                                                                <span class="total-review text-muted small ms-1">(@tour.SumRating)</span>
                                                            }
                                                        }
                                                        else
                                                        {
                                                            <span class="total-ratings text-muted small">No rating</span>
                                                        }

                                                    </div>
                                                    <div class="duration">
                                                        <i class="fa-regular fa-clock"></i>
                                                        @tour.DurationDays days
                                                    </div>
                                                </div>
                                                <div class="pricing">
                                                    <p>Starting From</p>
                                                    <span class="price">@tour.ChildPrice.ToString("N0", CultureInfo.GetCultureInfo("vi-VN"))</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                        <!-- Pagination -->
                        <div class="featured-tours__pagination pagination-orange-red section-mini-margin-top"></div>
                        <!-- Navigation -->
                        <div class="featured-tours__button-next"></div>
                        <div class="featured-tours__button-prev"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- featured-tours__section end  -->
    <!-- choos-us__section start  -->
    <section class="choos-us__section bg-white section-padding-top section-padding-bottom">
        <div class="container add-border-bottom">
            <div class="row g-4 justify-content-between">
                <div class="col-md-6 col-lg-6">
                    <div class="choos-us__thumb-area--extend position-relative">
                        <img src="~/assets/images/choos-us-section/thumb_2.png"
                             alt="choos-us-thumb"
                             class="figure-1 fade_bottom" />
                        <img src="~/assets/images/choos-us-section/thumb_3.png"
                             alt="choos-us-thumb"
                             class="figure-2" />
                        <a href="https://www.youtube.com/watch?v=rkpzYNB6xks"
                           class="common-btn color-two popup-youtube">
                            <i class="fa-solid fa-circle-play"></i>
                            Watch Now
                        </a>
                    </div>
                </div>
                <div class="col-md-6 col-lg-5">
                    <div class="section__header choos-us__content text-center text-md-start">
                        <h4 class="section__sub-title text-orange-red before-style-1">
                            Why Choose Us
                        </h4>
                        <h2 class="section__title title-anim">
                            Our Experiences
                            <br class="d-none d-md-block" />
                            Meet High Quality
                            <br class="d-none d-md-block" />
                            Standards
                        </h2>
                        <p>
                            Holisticly optimize proactive strategic theme areas rather
                            than effective manufactured products create.
                        </p>
                        <div class="facility">
                            <ul>
                                <li class="before-orange-red fade_bottom">Travel Plan</li>
                                <li class="before-orange-red fade_bottom">Cheap Rates</li>
                                <li class="before-orange-red fade_bottom">Hand-picked Tour</li>
                                <li class="before-orange-red fade_bottom">Private Guide</li>
                            </ul>
                        </div>
                        <div class="btn-trigger btn-bounce">
                                <a asp-controller="Home" asp-action="Privacy"
                                   class="common-btn common-btn--transparent color-one">Contact</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <figure class="choos-us__shap-icon">
            <img src="~/assets/images/choos-us-section/icon-tree.png"
                 alt="icon"
                 class="move-anim-1" />
        </figure>
        <figure class="choos-us__shap-icon-1">
            <img src="~/assets/images/choos-us-section/icon-wave.png"
                 alt="icon" />
        </figure>
    </section>
    <!-- choos-us__section end  -->
    <!-- category__section start  -->
    <section class="category__section section-padding-top-bottom">
        <figure class="category__shap-icon">
            <img src="~/assets/images/category-section/icon-camera.png"
                 alt="icon"
                 class="move-anim-1" />
        </figure>
        <div class="container">
            <div class="row g-4">
                <div class="col-12">
                    <div class="section__header">
                        <h4 class="section__sub-title">Browse By Category</h4>
                        <h2 class="section__title title-anim">Pick A Tour Type</h2>
                    </div>
                </div>
            </div>
            @if (Model.CategoryStats != null && Model.CategoryStats.Any())
            {
                <div class="row g-4 row-cols-2 row-cols-md-3 row-cols-xl-6 section-mini-padding-top">
                    @foreach (var stat in Model.CategoryStats)
                    {
                        <div class="col">
                            <div class="category__item item-stagger" style="text-align: center; display: flex; flex-direction: column; align-items: center; justify-content: center;">
                                <figure class="category-icon">
                                    <img src="~/assets/images/category-section/icon-1.png"
                                         alt="icon" />
                                </figure>
                                <h6 class="category-title">@stat.CategoryName</h6>
                                <p>@stat.TourCount Tour@(stat.TourCount > 1 ? "s" : "")+</p>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </section>
    <!-- category__section end  -->
   
    <!-- Fun-facts__section start  -->
    <div class="fun-facts__section section-mini-padding-top section-padding-bottom">
        <div class="container">
            <div class="row g-4">
                <div class="col-sm-6 col-xl-4">
                    <div class="fun-facts__item item-stagger">
                        <h2 class="fun-fact-count d-inline-flex justify-content-center align-items-center counter-item">
                            <span class="odometer d-inline-block"
                                  data-odometer-final="@Model.TotalDestinationCount">.</span>
                            <em>+</em>
                        </h2>
                        Total Destination
                    </div>
                </div>
               
                <div class="col-sm-6 col-xl-4">
                    <div class="fun-facts__item item-stagger">
                        <h2 class="fun-fact-count d-inline-flex justify-content-center align-items-center counter-item">
                            <span class="odometer d-inline-block" data-odometer-final="@Model.TotalActiveTourCount">.</span>
                            <em>k+</em>
                        </h2>
                        Total Travelers
                    </div>
                </div>
                <div class="col-sm-6 col-xl-4">
                    <div class="fun-facts__item item-stagger">
                        <h2 class="fun-fact-count d-inline-flex justify-content-center align-items-center counter-item">
                            <span class="odometer d-inline-block" data-odometer-final="@Model.TotalReviewCount">.</span>
                            <em>k+</em>
                        </h2>
                        Positive Reviews
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Fun-facts__section end  -->
   


    
    
