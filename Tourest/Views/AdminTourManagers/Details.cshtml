@* File: /Views/AdminTourManagers/Details.cshtml *@
@model AdminTourManagerDetailsViewModel

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Chi tiết Quản lý Tour";
}

<h1>@ViewData["Title"]: @Model.FullName</h1>

<div>
    <h4>Thông tin cơ bản</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.UserId</dd>
        <dt class="col-sm-2">Họ Tên</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FullName)</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
        <dt class="col-sm-2">Số Điện Thoại</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.PhoneNumber)</dd>
        <dt class="col-sm-2">Địa chỉ</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Address)</dd>
        <dt class="col-sm-2">Trạng thái</dt>
        <dd class="col-sm-10"> @(Model.IsActive ? "Hoạt động" : "Vô hiệu hóa")</dd>
        <dt class="col-sm-2">Ngày Đăng Ký</dt>
        <dd class="col-sm-10">@Model.RegistrationDate.ToString("g")</dd>
    </dl>
</div>

<hr />

<div>
    <h4>Các Phân công Hướng dẫn viên đã thực hiện</h4>
    @if (Model.AssignmentsMade.Any())
    {
        <table class="table table-sm table-bordered">
            <thead>
                <tr>
                    <th>ID Phân công</th>
                    <th>Tên Tour</th>
                    <th>Ngày Khởi hành</th>
                    <th>Hướng dẫn viên</th>
                    <th>Trạng thái</th>
                    <th>Ngày Phân công</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var assignment in Model.AssignmentsMade)
                {
                    <tr>
                        <td>@assignment.AssignmentId</td>
                        <td>@assignment.TourName</td>
                        <td>@(assignment.DepartureDate?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                        <td>@assignment.TourGuideName</td>
                        <td><span class="badge bg-info">@assignment.AssignmentStatus</span></td>
                        <td>@assignment.AssignmentDate.ToString("g")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Quản lý tour này chưa thực hiện phân công nào.</p>
    }
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-primary">Sửa thông tin</a> |
    <a asp-action="Index" class="btn btn-secondary">Quay lại Danh sách</a>
</div>