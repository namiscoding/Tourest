@* File: /Views/AdminTourManagers/Details.cshtml *@
@model AdminTourManagerDetailsViewModel
@using Tourest.Helpers
@inject IConfiguration Configuration 

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Chi tiết Quản lý Tour";
    var cloudName = Configuration["CloudinarySettings:CloudName"];
    var defaultAvatar = "/images/default-avatar.png"; 
}

<h1>@ViewData["Title"]: @Model.FullName</h1>

<div class="row">
    @* Cột ảnh đại diện *@
    <div class="col-md-3 text-center mb-3">
        <h4>Ảnh đại diện</h4>
        <img src="@CloudinaryHelper.GetThumbnailUrl(Model.ProfilePictureUrl, 200, 200, cloudName, defaultAvatar)"
             alt="Ảnh đại diện của @Model.FullName" class="img-thumbnail rounded-circle" style="width: 200px; height: 200px; object-fit: cover;" />
        @if (string.IsNullOrEmpty(Model.ProfilePictureUrl))
        {
            <small class="text-muted d-block mt-2">(Chưa có ảnh)</small>
        }
    </div>

    @* Cột thông tin cơ bản *@
    <div class="col-md-9">
        <h4>Thông tin cơ bản</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.UserId</dd>
            <dt class="col-sm-3">Họ Tên</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>
            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>
            <dt class="col-sm-3">Số Điện Thoại</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.PhoneNumber)</dd>
            <dt class="col-sm-3">Địa chỉ</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>
            <dt class="col-sm-3">Trạng thái</dt>
            <dd class="col-sm-9"> @(Model.IsActive ? "Hoạt động" : "Vô hiệu hóa")</dd>
            <dt class="col-sm-3">Ngày Đăng Ký</dt>
            <dd class="col-sm-9">@Model.RegistrationDate.ToString("g")</dd>
        </dl>
    </div>
</div>

<hr />

<div>
    <h4>Các Phân công Hướng dẫn viên đã thực hiện</h4>
    @if (Model.AssignmentsMade.Any())
    {
        <table class="table table-sm table-bordered table-striped mt-2">
            <thead>
                <tr>
                    <th>ID Phân công</th>
                    <th>Tên Tour</th>
                    <th>Ngày Khởi hành</th>
                    <th>Hướng dẫn viên</th>
                    <th>Trạng thái</th>
                    <th>Ngày Phân công</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var assignment in Model.AssignmentsMade)
                {
                    <tr>
                        <td>@assignment.AssignmentId</td>
                        <td>@assignment.TourName</td>
                        <td>@(assignment.DepartureDate?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                        <td>@assignment.TourGuideName</td>
                        <td><span class="badge bg-info">@assignment.AssignmentStatus</span></td>
                        <td>@assignment.AssignmentDate.ToString("g")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Quản lý tour này chưa thực hiện phân công nào.</p>
    }
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-primary">Sửa thông tin</a> |
    <a asp-action="Index" class="btn btn-secondary">Quay lại Danh sách</a>
</div>