    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const notificationItems = document.querySelectorAll('.notification__item');

            // Animation for notification items
            notificationItems.forEach((item, index) => {
                item.style.opacity = '0';
                item.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    item.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                    item.style.opacity = '1';
                    item.style.transform = 'translateY(0)';
                }, 100 * index);
            });

            // Add click functionality for notification items
            notificationItems.forEach(item => {
                item.addEventListener('click', function(e) {
                    if (!e.target.closest('.btn')) {
                        window.location.href = 'tour-details.html';
                    }
                });
            });

            // Countdown logic
            const assignedTours = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewData["AssignedTours"]));
            console.log("assignedTours:", assignedTours);

            if (assignedTours && assignedTours.length > 0) {
                assignedTours.forEach(tour => {
                    console.log("AssignmentId:", tour.AssignmentId);
                    console.log("AssignmentDate:", tour.AssignmentDate);

                    // Parse AssignmentDate using moment.js
                    const assignmentDate = moment(tour.AssignmentDate, "MMM DD, YYYY [at] hh:mm A").toDate();
                    const deadlineDate = new Date(assignmentDate.getTime() + (12 * 60 * 60 * 1000)); // Add 12 hours
                    const countdownElement = document.getElementById(`countdown-${tour.AssignmentId}`);

                    if (!countdownElement) {
                        console.error(`Countdown element not found for AssignmentId: ${tour.AssignmentId}`);
                        return;
                    }

                    console.log("Deadline Date:", deadlineDate);

                    function updateCountdown() {
                        const now = new Date();
                        const difference = deadlineDate.getTime() - now.getTime();

                        if (difference > 0) {
                            const days = Math.floor(difference / (1000 * 60 * 60 * 24));
                            const hours = Math.floor((difference % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                            const minutes = Math.floor((difference % (1000 * 60 * 60)) / (1000 * 60));
                            const seconds = Math.floor((difference % (1000 * 60)) / 1000);
                            countdownElement.textContent = `${days} ngày, ${hours} giờ, ${minutes} phút, ${seconds} giây`;
                        } else {
                            countdownElement.textContent = "Đã hết hạn";
                        }
                    }

                    setInterval(updateCountdown, 1000);
                    updateCountdown(); // Initial call
                });
            } else {
                console.log("No assigned tours found.");
            }
        });
    </script>
