        }

        .notification__list {
            max-width: 900px;
            margin: 0 auto;
        }

        .notification__item {
            background-color: #ffffff;
            border-left: 4px solid #28a745;
            border-radius: 8px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: relative;
            overflow: hidden;
        }

            .notification__item:hover {
                transform: translateY(-5px);
                box-shadow: 0 5px 20px rgba(0, 0, 0, 0.15);
            }

            .notification__item.pending {
                border-left-color: #ffc107;
            }

            .notification__item.confirmed {
                border-left-color: #28a745;
            }

            .notification__item.cancelled {
                border-left-color: #dc3545;
            }

        .notification__content {
            flex: 1;
        }

        .notification__title {
            font-size: 1.1rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

            .notification__title i {
                margin-right: 0.5rem;
                font-size: 1.2rem;
            }

        .notification__meta {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            margin-bottom: 0.5rem;
        }

        .meta-item {
            display: flex;
            align-items: center;
            font-size: 0.9rem;
            color: #6c757d;
        }

            .meta-item i {
                margin-right: 0.3rem;
                color: #28a745;
            }

        .notification__time {
            font-size: 0.85rem;
            color: #6c757d;
            font-style: italic;
        }

        .notification__actions {
            display: flex;
            align-items: center;
            gap: 0.8rem;
        }

        .btn {
            padding: 0.5rem 1rem;
            border-radius: 5px;
            font-size: 0.9rem;
            cursor: pointer;
            transition: all 0.3s ease;
            border: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }

            .btn i {
                margin-right: 0.3rem;
            }

        .btn-details {
            background-color: #28a745;
            color: #fff;
        }

            .btn-details:hover {
                background-color: #218838;
                transform: translateY(-2px);
            }

        .btn-view {
            background-color: #17a2b8;
            color: #fff;
        }

