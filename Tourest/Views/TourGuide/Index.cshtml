                <!-- Notifications List -->
                <div class="row">
                    <div class="col-12">
                        <div class="notification__list" id="notification-list">
                            @{
                                var assignedTours = ViewData["AssignedTours"] as List<Tourest.TourGuide.ViewModels.TourGuideAssignmentViewModel>;
                            }

                            @if (assignedTours != null && assignedTours.Any())
                            {
                                foreach (var tour in assignedTours)
                                {
                                    <div class="notification__item @tour.Status.ToLower()">
                                        <div class="notification__content">
                                            <div class="notification__title">
                                                <i class="fas fa-map-marked-alt text-primary"></i>
                                                <span class="ms-2">@tour.TourName</span>
                                                <span class="status-badge badge-@tour.Status.ToLower() ms-2">
                                                    <i class="fas @(tour.Status.ToLower() == "confirmed" ? "fa-check-circle" :
                                                                                                                                                                tour.Status.ToLower() == "pending" ? "fa-clock" :
                                                                                                                                                                "fa-times-circle") me-1"></i>
                                            @tour.Status
                                        </span>
                                    </div>

                                            <div class="notification__meta mt-3">
                                                <div class="meta-item">
                                                    <i class="fas fa-calendar-day text-info"></i>
                                                    <span class="ms-2">@tour.DepartureDate.ToString("MMM dd, yyyy")</span>
                                                </div>

                                                <div class="meta-item">
                                                    <i class="fas fa-users text-success"></i>
                                                    <span class="ms-2">
                                                        <span class="badge bg-light text-dark">
                                                            <i class="fas fa-child me-1"></i>@tour.TotalChildren
                                                        </span>
                                                        <span class="badge bg-light text-dark ms-2">
                                                            <i class="fas fa-user me-1"></i>@tour.TotalAdults
                                                        </span>
                                                    </span>
                                                </div>

                                                <div class="meta-item">
                                                    <i class="fas fa-map-marker-alt text-danger"></i>
                                                    <span class="ms-2">@tour.PickupPoint</span>
                                                </div>
                                            </div>

                                            <div class="notification__time mt-2">
                                                <i class="far fa-clock text-muted"></i>
                                                <small class="text-muted ms-1">
                                                    Assigned on @tour.AssignmentDate.ToString("MMM dd, yyyy 'at' hh:mm tt")
                                                </small>
                                            </div>

                                            <div class="deadline-countdown-container" id="deadline-countdown-@tour.AssignmentId">
                                                Deadline in: <span id="countdown-@tour.AssignmentId"></span>
                                            </div>
                                        </div>

                                        <div class="notification__actions">
                                            <button class="btn btn-sm btn-details me-2">
                                                <i class="fas fa-info-circle me-1"></i> Details
                                            </button>
                                            <button class="btn btn-sm btn-view">
                                                <i class="fas fa-users me-1"></i> Group
                                            </button>
                                        </div>
                                    </div>
                                                        }
                            }
                            else
                            {
                                <div class="empty-state text-center py-5">
                                    <i class="fas fa-calendar-check fa-3x text-muted mb-4"></i>
                                    <h3 class="text-muted">No Tour Assignments</h3>
                                    <p class="text-muted mb-4">You don't have any assigned tours at the moment.</p>
                                    <button class="btn btn-primary">
